{
  "name": "windsurf-stats",
  "version": "3.0.0",
  "description": "A web app to keep track of windsurf session statistics",
  "main": "index.js",
  "scripts": {
    "build-server": "tsc",
    "build-shared-interfaces": "cd ../shared && tsc",
    "copy-files": "cp .env ./dist && cp package.json ./dist && cp package-lock.json ./dist",
    "build": "rm -rf ./dist && npm run build-shared-interfaces && npm run build-server && npm run copy-files",
    "start": "node ./dist/index.js",
    "lint": "tslint -p . -c tslint.json \"**/*.ts\"",
    "watch": "ts-node-dev --respawn --transpile-only ./src/index.ts",
    "upgradeDb": "node upgradeDb.js"
  },
  "keywords": [
    "windsurf",
    "statistics"
  ],
  "author": "jeroentvb",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/jeroentvb/windsurf-stats.git"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "chalk": "^2.4.2",
    "connect-mongo": "^3.2.0",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "helmet": "^3.23.3",
    "jeroentvb-helper": "github:jeroentvb/jeroentvb-helper",
    "mongodb": "^3.6.3",
    "wind-scrape": "github:jeroentvb/wind-scrape#dist"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.9",
    "@types/express-session": "^1.17.0",
    "@types/helmet": "0.0.45",
    "@types/mongodb": "^3.6.3",
    "@types/node": "^12.19.9",
    "ts-node-dev": "^1.1.1",
    "tslint": "^5.20.1",
    "typescript": "^3.9.7"
  },
  "nodemonConfig": {
    "ignore": [
      "public/*",
      "README"
    ]
  }
}
