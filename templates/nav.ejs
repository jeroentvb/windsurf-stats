<body>
  <% switch (page) {
    case 'Error 404': %>
    <header>
      <nav>
        <h2 class="page-heading"><%= page %></h2>
      </nav>
    </header>
      <% break
    case 'Error 401': %>
    <header>
      <nav>
        <h2 class="page-heading"><%= page %></h2>
      </nav>
    </header>
      <% break
    case 'Login': %>
    <header>
      <nav>
        <h2 class="page-heading"><%= page %></h2>
      </nav>
    </header>
      <% break
      case 'Register': %>
      <header>
        <nav>
          <h2 class="page-heading"><%= page %></h2>
        </nav>
      </header>
        <% break
    default: %>
    <header>
      <nav>
        <h2 class="page-heading"><%= page %></h2>
        <img id="open-menu" src="img/menu-icon.svg" alt="Menu icon">
        <ul id="menu">
            <li><img id="close-menu" src="img/close-icon.svg" alt="Close menu icon"></li>
            <li>Menu</li>
          <% if (typeof loginStatus != 'undefined') { %>
            <li><a href="/statistics"><%= lang.menu.statistics %></a></li>
            <li><a href="/add-session"><%= lang.menu.add_session %></a></li>
            <li><a href="/preferences"><%= lang.menu.preferences %></a></li>
            <li><a href="/account"><%= lang.menu.account %></a></li>
            <li><a href="/sign-out"><%= lang.menu.logout %></a></li>
          <% } else { %>
            <li><a href="/login"><%= lang.menu.login %></a></li>
          <% } %>
        </ul>
      </nav>
    </header>
  <% } %>
